@model IEnumerable<Assignmen3.Models.Teacher>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<p>This page should be showing information about @Model.Count() teachers</p>

<div>
    <form action="/Teacher/List" method="get">
        <input type="text" name="SearchKey" placeholder="Type a name here" />
        <input type="submit" value="search" />
    </form>
</div>

<div id="containerlist">
    <nav>
        <a class="navlink" href="/Teacher/New">New Teacher</a>
    </nav>
    <h2>List of Teacher</h2>
    @foreach (var teacher in Model)
    {

        <div class="listitem row">
            <div class="col-md-12">
                <a href="/Teacher/Show/@teacher.TeacherId">@teacher.TeacherFname @teacher.TeacherLname</a>
            </div>
        </div>
    }
</div>